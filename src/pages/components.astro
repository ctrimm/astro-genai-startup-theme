---
import Layout from '../layouts/main.astro';
import { ComponentShowcase } from '@/components/ComponentShowcase';
import { AdvancedShowcase } from '@/components/AdvancedShowcase';
import { Tabs, TabsList, TabsTrigger, TabsContent } from '@/components/ui/tabs';
---

<Layout title="Components - GenAI">
	<section class="py-20 md:py-32">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<div class="text-center space-y-4 mb-16">
					<h1 class="text-4xl md:text-6xl font-bold">
						Component{" "}
						<span class="bg-gradient-to-r from-purple-600 to-pink-600 dark:from-purple-400 dark:to-pink-400 bg-clip-text text-transparent">
							Library
						</span>
					</h1>
					<p class="text-xl text-muted-foreground max-w-2xl mx-auto">
						A collection of beautiful, accessible, and reusable components built with React, Tailwind CSS, and Radix UI
					</p>
				</div>

				<Tabs defaultValue="basic" className="w-full" client:load>
					<TabsList className="grid w-full max-w-md mx-auto grid-cols-2 mb-8">
						<TabsTrigger value="basic">Basic Components</TabsTrigger>
						<TabsTrigger value="advanced">Advanced Components</TabsTrigger>
					</TabsList>
					<TabsContent value="basic">
						<ComponentShowcase client:load />
					</TabsContent>
					<TabsContent value="advanced">
						<AdvancedShowcase client:load />
					</TabsContent>
				</Tabs>
			</div>
		</div>
	</section>
</Layout>
