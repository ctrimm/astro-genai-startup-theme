---
import Layout from '../layouts/main.astro';
import { ComponentTabs } from '@/components/ComponentTabs';

const base = import.meta.env.BASE_URL;
---

<Layout title="Components - GenAI">
	<section class="py-20 md:py-32">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<div class="text-center space-y-4 mb-16">
					<h1 class="text-4xl md:text-6xl font-bold">
						Component{" "}
						<span class="bg-gradient-to-r from-purple-600 to-pink-600 dark:from-purple-400 dark:to-pink-400 bg-clip-text text-transparent">
							Library
						</span>
					</h1>
					<p class="text-xl text-muted-foreground max-w-2xl mx-auto">
						A collection of beautiful, accessible, and reusable components built with React, Tailwind CSS, and Radix UI
					</p>
					<div class="flex flex-wrap gap-3 justify-center mt-6">
						<a
							href={`${base}advanced-components`}
							class="inline-flex items-center justify-center h-10 px-6 rounded-md bg-primary text-primary-foreground hover:bg-primary/90 transition-colors text-sm font-medium"
						>
							View Advanced Components â†’
						</a>
						<a
							href={`${base}dashboard`}
							class="inline-flex items-center justify-center h-10 px-6 rounded-md border bg-background hover:bg-accent hover:text-accent-foreground transition-colors text-sm font-medium"
						>
							See Dashboard Demo
						</a>
					</div>
				</div>

				<ComponentTabs client:load />
			</div>
		</div>
	</section>
</Layout>
